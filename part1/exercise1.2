const App = () => {
  const course = 'Half Stack application development'
  const part1 = 'Fundamentals of React'
  const exercises1 = 10
  const part2 = 'Using props to pass data'
  const exercises2 = 7
  const part3 = 'State of a component'
  const exercises3 = 14
  // Im creating 2 new arrays so it's more manageable to use (the second one is more useless because
  // of the type of code that the exercise gave me, I'm using ex1+ex2+ex3 instead of the array)
  const exercises = [10, 7, 14]
  const parts = ['Fundamentals of React', 'Using props to pass data', 'State of a component']

  // I declare the 3 variables that I have to use and its values
  const Header = ({ course }) => <h1>{course}</h1>

  // Declared with without giving the value but with variables so I can use props later

  const Content = () => {
    return (
      <div>
        <Part name = "Fundamentals of React" exercises = {10} />
        <Part name = "Using props to pass data" exercises = {7} />
        <Part name = "State of a component" exercises = {14} />
      </div>
    )
  }
  
  // I use props to be able to recycle code if needed and being more responsable
  // Also did a new component called Part to be able to use it in Content

  const Part = (props) => {
    return (
      <p>{props.name} {props.exercises}</p>
    )
  }

  const Total = ({ exercises }) => <h1>{exercises}</h1>

  // At the return I insert my components and asign them to their respective values

  return (
    <div>
      <Header course = {course}/>
      <Content parts = {parts}/>
      <Total exercises = {exercises}/>
      <p>
        {part1} {exercises1}
      </p>
      <p>
        {part2} {exercises2}
      </p>
      <p>
        {part3} {exercises3}
      </p>
      <p>Number of exercises {exercises1 + exercises2 + exercises3}</p>
    </div>
  )
}

export default App
